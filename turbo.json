  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "dev": { "cache": false },
    "lint": { "outputs": [] },
    "typecheck": { "outputs": [] },
    "start": { "cache": false }
  }
}